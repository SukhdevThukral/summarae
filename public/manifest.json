{
  "manifest_version": 3,
  "name": "Summarae",
  "version": "1.0",
  "description": "Simple AI summarizer extension",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Summarae"
  },
  "permissions": ["activeTab","scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ]
}
